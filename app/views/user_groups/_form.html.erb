<%= form_for(user_group, html: { class: 'my-3' }) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :super_admin %>
  <%= f.check_box :super_admin %>
  <%= f.fields_for :group_permissions do |group_permission_form|%>
    <div class="my-3">
      <%= group_permission_form.object.permission_resource.name %>
      <%= group_permission_form.hidden_field :permission_resource_id%>
      <%= group_permission_form.label :priority%>
      <%= group_permission_form.select :priority, collection: GroupPermission.priorities.keys %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>